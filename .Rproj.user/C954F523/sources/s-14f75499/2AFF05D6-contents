#Only recalls what was first assigned to dice, doesn't redo sample hence repeated answers

myfunction<-function(){}

roll<-function(){
  die<-1:6
  dice<-sample(die,size=2,replace=TRUE)
  sum(dice)
}
roll()
roll()
roll()

roll
#Typing function without parentheses will show code within function

roll2<-function(){
  dice<-sample(bones,size=2,replace=TRUE)
  sum(dice)
}

roll2()
#Error bc bones object has not been defined yet

roll2<-function(bones){
  dice<-sample(bones,size=2,replace=TRUE)
  sum(dice)
}

roll2(bones=1:4)
roll2(bones=1:6)
roll2(1:20)

roll2<-function(bones=1:6){
  dice<-sample(bones, size=2, replace=TRUE)
  sum(dice)
}

roll2()
#When roll2 is called it uses the argument bones=1:6, calls dice to generate numbers from bones, sums the result of dice, then reports the outcome via roll2()

